					<h2>My history & favorites</h2>
				</div>

				<div id="video-container">
					<div class="row extra-height">
						<%populatedUser.favorite_videos.forEach(function(faveVideo){ %>
							<div class="small-video col-xs-6 col-sm-6 col-md-6">
								<div class="image">
									<a href="/video/<%=faveVideo._id%>"><img src="<%=faveVideo.preview_image_link%>" alt="#"></img></a>
								</div>
								<div class="video-info info-small extra-height-child">
									<% if(faveVideo.title.length > 25){ 
										faveVideo.title = faveVideo.title.substring(0, 22) + "...";
									} %>
									<a href="/video/<%=faveVideo._id%>"><p id="video-title"><%=faveVideo.title%></p></a>
									
									<p id="video-duration"><%=faveVideo.duration%></p>
									<p id="video-views"><span><%=faveVideo.views%></span> Views</p>
									<a id="video-created-by-image-user" href="/user/<%=faveVideo.created_by.username%>"><img src="<%=faveVideo.created_by.profile_image%>"></a>
									<a id="video-created-by-user-show" href="/user/<%=faveVideo.created_by.username%>"><%=faveVideo.created_by.username%></a>
									
								</div>
							</div>
						<% }); %>
					</div>
				</div>
