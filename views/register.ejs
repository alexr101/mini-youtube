	<div id="page-wrapper">
		
	<input id="upload-input" class="image-input" type="file" name="upload" accept="image/*" style="display:none">

	<form id="form-register" action="/auth/register" method="POST">
		<div id="profile-image-container" class="header-image-container image-uploader">
			<img id="profile-image" class="profile-image image-to-change" src=<%=tempHeaderImage%>></img>


		    <div id="header-image-selector" class="image-selector" data-image-type="header" data-min-width="600" data-min-height="300">
		    	<img id="header-camera" src="/images/photo-camera.png" alt="#"/>
		    	<p>Select profile photo</p>
		    </div>


		</div>
		
		<div class="profile-header image-uploader">
			
			<div class="profile-image-circle">
				<img class="user-image image-to-change" src=<%=tempProfileImage%>></img>
			</div>
			
		    <div id="user-image-selector" class="image-selector" data-image-type="profile" data-min-width="100" data-min-height="100">
		    	<img id="profile-camera" src="/images/photo-camera.png" alt="#"/>
		    </div>

			<!--<input id="image-upload2" class="image-input" data-min-width="100" data-min-height="100" style="display:none" type="file" name="image-upload" accept="image/*"/>-->
		
			<div id="username">
				<h4>Username</h4>
			</div>
		</div>
		
		<div class="container general-container">
			<div id="form-container">
					<!--Hidden inputs for header and profile image text-->
					<input style="display:none" type="text" name="gender" id="gender-input">
					<input style="display:none" type="text" name="headerImage" id="header-input" value="<%=headerInputValue%>">
					<input style="display:none" type="text" name="profileImage" id="profile-input" value="<%=profileInputValue%>">
					<input style="display:none" type="text" name="headerPosition" id="header-position" value="0">
					
					<div id="left-container">
						<input id="username-input" class="form-control" type="text" name="username" placeholder="username">
						<input id="password" class="form-control" type="password" name="password" placeholder="password">
						<input id="motto" class="form-control" type="text" name="slogan" placeholder="Your motto">
					</div>
					<div id="middle-container">
						<div id="male-female">
							<div id="male-input" class="gender-input"><p>M</p></div>
							<div id="female-input" class="gender-input"><p>F</p></div>
						</div>

						<textarea id="about" class="form-control" rows="7" type="text" name="about" placeholder="Tell everyone a little about yourself"></textarea>
					</div>
					<div id="right-container">
						<div class="row">
							<div class="col-xs-8">
								<input id="city" class="form-control"  type="text" name="city" placeholder="city">
							</div>
							<div class="col-xs-4">
								<select id="state" class="form-control" name="state">
									<option value="">state</option>
									<option value="AL">Alabama</option>
									<option value="AK">Alaska</option>
									<option value="AZ">Arizona</option>
									<option value="AR">Arkansas</option>
									<option value="CA">California</option>
									<option value="CO">Colorado</option>
									<option value="CT">Connecticut</option>
									<option value="DE">Delaware</option>
									<option value="DC">District Of Columbia</option>
									<option value="FL">Florida</option>
									<option value="GA">Georgia</option>
									<option value="HI">Hawaii</option>
									<option value="ID">Idaho</option>
									<option value="IL">Illinois</option>
									<option value="IN">Indiana</option>
									<option value="IA">Iowa</option>
									<option value="KS">Kansas</option>
									<option value="KY">Kentucky</option>
									<option value="LA">Louisiana</option>
									<option value="ME">Maine</option>
									<option value="MD">Maryland</option>
									<option value="MA">Massachusetts</option>
									<option value="MI">Michigan</option>
									<option value="MN">Minnesota</option>
									<option value="MS">Mississippi</option>
									<option value="MO">Missouri</option>
									<option value="MT">Montana</option>
									<option value="NE">Nebraska</option>
									<option value="NV">Nevada</option>
									<option value="NH">New Hampshire</option>
									<option value="NJ">New Jersey</option>
									<option value="NM">New Mexico</option>
									<option value="NY">New York</option>
									<option value="NC">North Carolina</option>
									<option value="ND">North Dakota</option>
									<option value="OH">Ohio</option>
									<option value="OK">Oklahoma</option>
									<option value="OR">Oregon</option>
									<option value="PA">Pennsylvania</option>
									<option value="RI">Rhode Island</option>
									<option value="SC">South Carolina</option>
									<option value="SD">South Dakota</option>
									<option value="TN">Tennessee</option>
									<option value="TX">Texas</option>
									<option value="UT">Utah</option>
									<option value="VT">Vermont</option>
									<option value="VA">Virginia</option>
									<option value="WA">Washington</option>
									<option value="WV">West Virginia</option>
									<option value="WI">Wisconsin</option>
									<option value="WY">Wyoming</option>
								</select>
							</div>
								
						</div>
						<input id="email" class="form-control"  type="email" name="email" placeholder="email">
						<input id="email-confirm" class="form-control"  type="email" placeholder="confirm email">
					</div>
					<div id="bottom-container">
						<button id="submit-btn" class="btn btn-primary">I will join you!</button>
					</div>
			</div>
		</div>
	</form>
	

	<script src="http://malsup.github.com/jquery.form.js"></script>
	<script src="/javascripts/register.js"> </script>
	<script src="/javascripts/uploadImage.js"> </script>
	<script src="/javascripts/registerFormValidation.js"> </script>
	</div>

<% include partials/footer %>